---
export interface Props {
  id?: string;
  title?: string;
  class?: string;
  dark?: boolean;
}

const { id, title, class: className, dark = false } = Astro.props;
---

<section id={id} class:list={['section', className, { dark }]}>
  <div class="container">
    {title && <h2 class="section-title text-center">{title}</h2>}
    <div class="section-content">
      <slot />
    </div>
  </div>
</section>

<style>
  .section {
    padding: 6rem 0;
  }
  
  .section.dark {
      background-color: var(--color-bg-dark);
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-primary);
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: -1px;
  }
</style>
