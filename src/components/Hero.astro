---
export interface Props {
  image: string;
  title: string;
  subtitle?: string;
  prenotaUrl: string;
}

const { image, title, subtitle, prenotaUrl } = Astro.props;
---

<div class="hero">
  <img src={image} alt={title} class="hero-bg" fetchpriority="high" />
  <div class="hero-overlay"></div>
  <div class="hero-content container text-center">
    <h1 class="hero-title">{title}</h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    <a href={prenotaUrl} class="btn hero-btn" target="_blank" rel="noopener noreferrer">PRENOTA</a>
  </div>
</div>

<style>
  .hero {
    position: relative;
    height: 80vh;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-title {
    font-size: 3.5rem;
    color: #fff;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
  }

  .hero-subtitle {
    font-size: 20px; /* Requested size */
    color: #fff; /* Requested color */
    margin-bottom: 2rem;
    font-family: var(--font-body); /* Flame Sans */
    /* Removed text-transform: uppercase */
  }
  


  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
  }
</style>
